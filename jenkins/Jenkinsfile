pipeline {
    agent {
        dockerfile {
            filename './jenkins/Dockerfile' 
            args '-p 3000:3000'
            args '--tmpfs /.config'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install' 
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deliver') { 
            steps {
                input message: 'Make suer everything is ok. (Click "Proceed" to deploy to the production server)' 
                sh './jenkins/scripts/deliver.sh' 
            }
        }
    }
}